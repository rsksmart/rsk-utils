{
  "name": "@rsksmart/rsk-utils",
  "version": "2.0.0",
  "description": "A collection of JS utility functions for RSK",
  "main": "dist/index.js",
  "scripts": {
    "lint": "npx eslint src/*.ts --quiet",
    "test:node": "npx nyc mocha -r ts-node/register 'test/**/*.ts'",
    "test": "npm run test:node",
    "doc": "node ./.doc/makeDoc.js > Documentation.md",
    "build": "npm run lint  && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsksmart/rsk-utils.git"
  },
  "keywords": [
    "rsk",
    "utils"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rsksmart/rsk-utils/issues"
  },
  "homepage": "https://github.com/rsksmart/rsk-utils#readme",
  "dependencies": {
    "keccak": "^3.0.4",
    "rlp": "^2.2.4"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.6",
    "@types/chai": "^5.0.0",
    "@types/keccak": "^3.0.5",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "chai-bytes": "^0.1.2",
    "eslint": "^9.15.0",
    "mocha": "^11.0.0",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
